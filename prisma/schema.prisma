generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model role {
  description String
  id          Int         @default(autoincrement()) @id
  name        String      @unique
  user_role   user_role[]
}

model user_role {
  id      Int   @default(autoincrement()) @id
  role_id Int
  user_id Int
  role    role  @relation(fields: [role_id], references: [id])
  users   users @relation(fields: [user_id], references: [id])
}

model users {
  email     String      @unique
  id        Int         @default(autoincrement()) @id
  lastname  String
  name      String
  password  String
  phone     String
  user_role user_role[]
}