generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model apply_job {
  id     Int   @default(autoincrement()) @id
  jobId  Int
  userId Int
  job    job   @relation(fields: [jobId], references: [id])
  users  users @relation(fields: [userId], references: [id])
}

model categories {
  description String?
  id          Int     @default(autoincrement()) @id
  name        String
  job         job[]
}

model company {
  created_at  DateTime @default(now())
  description String
  id          Int      @default(autoincrement()) @id
  name        String
  phone       String
  updated_at  DateTime @default(now())
  website_url String?
  job         job[]
}

model job {
  categoryId      Int
  companyId       Int
  createdAt       DateTime    @default(now())
  description     String?
  id              Int         @default(autoincrement()) @id
  jobAvailable    available?
  name            String
  numberPositions Int?
  updatedAt       DateTime    @default(now())
  categories      categories  @relation(fields: [categoryId], references: [id])
  company         company     @relation(fields: [companyId], references: [id])
  apply_job       apply_job[]
}

model profile {
  description String?
  endDate     DateTime?
  id          Int       @default(autoincrement()) @id
  institution String
  position    String
  startDate   DateTime
  userId      Int
  users       users     @relation(fields: [userId], references: [id])
}

model role {
  description String
  id          Int         @default(autoincrement()) @id
  name        String
  user_role   user_role[]
}

model user_role {
  id      Int   @default(autoincrement()) @id
  role_id Int
  user_id Int
  role    role  @relation(fields: [role_id], references: [id])
  users   users @relation(fields: [user_id], references: [id])
}

model users {
  email     String      @unique
  id        Int         @default(autoincrement()) @id
  is_active Int         @default(1)
  lastname  String
  name      String
  password  String
  phone     String
  apply_job apply_job[]
  profile   profile[]
  user_role user_role[]
}

enum available {
  NO
  YES
}