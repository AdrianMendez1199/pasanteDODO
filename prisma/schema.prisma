generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model categories {
  description String?
  id          Int     @default(autoincrement()) @id
  name        String
  job         job[]
}

model job {
  categoryId      Int
  createdAt       DateTime   @default(now())
  description     String?
  id              Int        @default(autoincrement()) @id
  jobAvailable    available?
  name            String
  numberPositions Int?
  publishedBy     Int
  updatedAt       DateTime   @default(now())
  categories      categories @relation(fields: [categoryId], references: [id])
  users           users      @relation(fields: [publishedBy], references: [id])
}

model role {
  description String
  id          Int         @default(autoincrement()) @id
  name        String
  user_role   user_role[]
}

model user_role {
  id      Int   @default(autoincrement()) @id
  role_id Int
  user_id Int
  role    role  @relation(fields: [role_id], references: [id])
  users   users @relation(fields: [user_id], references: [id])
}

model users {
  email     String      @unique
  id        Int         @default(autoincrement()) @id
  lastname  String
  name      String
  password  String
  phone     String
  job       job[]
  user_role user_role[]
}

enum available {
  NO
  YES
}